{
  "manifest_version": 3,
  "name": "Remember Windows",
  "version": "1.2",
  "description": "Save and restore all windows/tabs with their positions and sizes",
  "permissions": ["tabs"],
  "incognito": "split",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Remember Windows",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
